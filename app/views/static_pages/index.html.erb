<section class="bucketlistapp">
  <header class="header">
    <h1>bucketlist</h1>
  </header>

  <section class="main">
  	<ul class="bucketlist-list">
  	</ul>

  </section>
</section>

<script>
	$(function() {
		$.get("/tasks").success( function( data ) {
			var htmlString = "";
			$.each(data, function(index, task){
				console.log(task.title);
			        var liElement = '<li><div class="view"><input class="toggle" type="checkbox"><label>' + task.title + '</label></div></li>';
			        htmlString += liElement;
			        
			});
			var ulbucketlist = $('.bucketlist-list')
			ulbucketlist.html(htmlString)
		});
	});
</script>	
	
	



